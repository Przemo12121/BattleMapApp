@model ConnectionInfo;

<link rel="stylesheet" href="~/css/gmTokens.css"/>

<div id="mainTokenScreen" class="mainTokenScreen">
    <!--Area for displaying existing tokens-->
    <div id="tokensDisplayArea" style="height:90%; background-color:white">
        <table>
            <tbody>
                @foreach (var item in Model.TokensList)
                {
                    <tr>
                        <td>@Html.DisplayFor(name => item.Name)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!--Area for buttons-->
    <div>
        <form enctype="multipart/form-data" method="post" asp-controller="Tokens" asp-action="Create" target="serverResponseIframe">
            <input type ="text" asp-for="Token.Name"/>
            <input type="submit" />
        </form>
    </div>

    <form enctype="multipart/form-data" method="post" asp-controller="Tokens" asp-action="Index" target="serverResponseIframe" hidden>
        <input id="getTokenListSubmit" type="submit" />
    </form>

    <iframe id="tokenListIframe" name="tokenListIframe" style="display: none;">

    </iframe>
</div>



<script src="~/js/gmScripts/tokenControls.js"></script>